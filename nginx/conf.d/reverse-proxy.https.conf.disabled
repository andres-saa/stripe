
server {
    listen 443 ssl;
    http2;
    server_name api.stripe.salchimonster.com;

    ssl_certificate /etc/letsencrypt/live/api.stripe.salchimonster.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.stripe.salchimonster.com/privkey.pem;
    include /etc/nginx/conf.d/ssl_params.conf;

    location / {
        proxy_pass http://api_stripe:80;
        include /etc/nginx/proxy_params.conf;
    }
}
